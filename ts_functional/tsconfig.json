{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
